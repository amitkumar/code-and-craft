doctype html
html(lang='en-US')
  head
    meta(charset='UTF-8')
    title Code & Craft Timer!
    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
  body
    style.
      html, body {
      width: 100%;
      height: 100%;
      padding: 0;
      margin: 0;
      }
      body {
      position: relative;
      overflow: hidden;
      font-family: 'Roboto', sans-serif;
      font-size: 10px;
      }
      .craft-timer {
      width: 100%;
      height: 100%;
      }
      /*.craft-timer path:last-of-type {
      fill: rgba(0,0,0,.0);
      }*/
      .btn-default {
      border-radius: 0;
      }
      .show-on-load {
      visibility: hidden;
      }
      .control-panel {
      position: fixed;
      top: 0;
      /*transform: translate3d(0, -50%, 0);*/
      right: 0;
      height: 100%;
      width: 17rem;
      /*border-left: 1px solid rgba(0,0,0,.1);*/
      padding: 1rem;
      opacity: 0;
      transition: all .25s ease;
      }
      .control-panel.visible {
      opacity: 1;
      transition: all .2s ease;
      }
      .control-panel .btn {
      width: 10em;
      }
      .time {
      text-align: center;
      font-size: 1.2rem;
      }
      .craft-graph {
      z-index : 10;
      position: relative;
      }
      .master-graph {
      transition: opacity .5s ease-out;
      opacity: .1;
      z-index : 0;
      position: relative;
      }
      .master-graph.active {
      opacity: 1;
      }
      .work-timer-remaining {
      transition: opacity .5s ease-out;
      opacity: .1;
      font-size: 16px;
      position: fixed;
      text-align: center;
      bottom: 0;
      display: block;
      width: 100%;
      color: rgba(0,0,0,.1);
      margin: 0 0 .2em 0;
      padding: 0
      }
      .work-timer-remaining.active {
      opacity: 1;
      }
    svg#craft-timer.craft-timer
    h2#work-timer-remaining.work-timer-remaining
    #control-panel.control-panel.show-on-load
      button#btn-start-global-timer.btn.btn-default(type='button') Start Timer
      button#btn-stop-global-timer.btn.btn-default(type='button') Stop Timer
      button#btn-toggle-sound.btn.btn-default(type='button') Disable Sound
      br
      br
      p#elapsed-time.time
    audio#craft-audio-10s
      source(src='audio/singing-bowl-15s.mp3', type='audio/mp3')
    audio#craft-audio-loop
      source(src='audio/singing-bowl-loop-starting-at-10s.mp3', type='audio/mp3')
    script(src='/js/bundle-timer.js')
