		title Code &amp; Craft

	body
		style.
			html, body {
				font-size : 16px;
				font-family : sans-serif;
				font-weight : bold;
			}

			@media (max-width: 600px) {
				html, body {
					font-size : 12px;
				}
			}

			* {
				box-sizing: border-box;
			}
			
			#background-shapes {
				position: absolute;
				z-index: 0;
				top: 0;
				width: 100%;
				height: 100%;
				//- display: flex;
				flex-wrap : wrap;
				justify-content: space-around;
				align-items: center;
				align-content: stretch;
				padding: .5em;
			}


			#invite {
				position: absolute;
				top: 0;
				left: 0;
				width: 40%;
				padding: 1em;
				z-index: 100;
				background: white;
				margin-left: 1em;
			}

			.external-resource {
				display: inline-block;
				margin-right: .5em;
			}
			.external-resource img {
				width: 1.25em;
				vertical-align: initial;
			}

			.external-resource {
				transition: .25s all ease;
				transform: rotate(0);
			}
			.external-resource:hover {
				transform : rotate(360deg);
			}

			.svg-wrapper {
				width: 20%;
				display: inline-block;
				padding: .5rem;
			}
			svg {
				width: 100%;
				height: auto;
				transition: .25s all ease;
				transform: scale(1);
			}

			svg g {
				transition: .25s all ease;
				transform : scale(1);
				transform-origin : 50% 50%;
			}

			svg:hover g {
				transform : scale(0);
			}

			main {
				position: relative;
				z-index: 10;
				//- height: 100vh;
			}

			.h1 {
				position: fixed;
				font-size: 12rem;
				text-align: right;
				font-weight: 600;
				color: white;
				line-height: .7;
				letter-spacing: -.04em;
				width: 100%;
				padding-right: 0em;
				top: 1rem;
				right: 0;
				pointer-events: none;
				margin: 0;
			}

			.form {
				position: fixed;
				top: 50%;
				left: 50%;
				transform: translate3d(-50%,-50%,0) scale(0);
				background: white;
				padding: 4em;
				font-weight: bold;
				text-align: center;
				transition: .25s all ease;
				color: rgba(0,0,0,1);
				font-size: 24px;
			}

			.form.visible {
				transform: translate3d(-50%,-50%,0) scale(1);
			}

			.form input {
				padding: 1em;
				width: 20em;
				background: white;
				color: black;
				font-weight: bold;
				text-align: center;
				border: 5px solid rgba(0,0,0,1);
				font-size: 24px;
			}
			.form button {
				background: none;
				display: block;
				margin: 1em auto 0;
				padding: 1em 2em;
				color: rgba(0,0,0,1);
				border: 5px solid rgba(0,0,0,1);
				font-weight: bold;
				font-size: 24px;
				cursor: pointer;
				transition: .25s all ease;
			}
			.form button:hover {
				transform: scale(1.2);
			}

